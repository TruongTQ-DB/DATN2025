<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dotted"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layerType="software"
        android:background="#C7C6CA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_type_service"
        style="@style/roboto_regular_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_18_dp"
        android:paddingTop="3dp"
        android:paddingBottom="@dimen/margin_15_dp"
        android:layout_marginBottom="@dimen/margin_14_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dotted"
        tools:text="Khám Viêm Gan" />
    <ImageView
        android:id="@+id/imv_checker"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="@drawable/ic_select"
        android:layout_marginEnd="4.5dp"
        app:layout_constraintTop_toTopOf="@+id/tv_type_service"
        app:layout_constraintBottom_toBottomOf="@+id/tv_type_service"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>