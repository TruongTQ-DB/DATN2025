<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/cv_container"
    android:clickable="true"
    android:layout_marginHorizontal="@dimen/margin_2_dp"
    android:focusable="true"
    app:cardElevation="@dimen/margin_6_dp"
    android:elevation="@dimen/margin_6_dp"
    android:layout_marginTop="@dimen/margin_2_dp"
    app:cardCornerRadius="@dimen/margin_12_dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_6_dp">
        <TextView
            android:id="@+id/tv_name"
            style="@style/roboto_medium_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/textsize_14_sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/textsize_14_sp"
            app:layout_constraintEnd_toStartOf="@+id/imv_delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="30 shine" />
        <ImageView
            android:id="@+id/imv_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/textsize_14_sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:tint="@color/color_0957DF"
            android:src="@drawable/ic_delete"
            tools:ignore="UseAppTint" />
        <ImageView
            android:id="@+id/imv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_4_dp"
            android:layout_marginHorizontal="@dimen/textsize_14_sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@color/color_line"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>