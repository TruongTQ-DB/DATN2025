<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16_dp">
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="@dimen/margin_30_dp"
            android:layout_height="@dimen/margin_30_dp"
            android:src="@drawable/ic_bg_back_doctor"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/height_50_dp"
            android:layout_height="@dimen/height_50_dp"
            android:layout_marginStart="@dimen/margin_16_dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/imv_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar_circle"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/margin_18_dp"
            style="@style/roboto_medium_16"
            android:text="Nguyễn Duy Khánh abcdasdadasdasdasd"/>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_header"
        android:background="@color/color_bg_button_delete_medical"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintBottom_toTopOf="@+id/cl_input_message"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_10_dp"
        android:paddingBottom="@dimen/margin_10_dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:reverseLayout="true"
        tools:listitem="@layout/item_container_sent_message" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_16_dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/edt_message"
            style="@style/roboto_regular_16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15_dp"
            android:background="@drawable/bg_input_chat"
            android:clipToOutline="false"
            android:textColor="@color/color_1B1B1F"
            android:hint="Aa"
            android:maxLength="1000"
            android:maxLines="6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/margin_10_dp"
            android:paddingVertical="@dimen/margin_8_dp"
            android:paddingStart="@dimen/margin_14_dp"
            android:paddingEnd="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_sent"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:id="@+id/btn_sent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_send"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>