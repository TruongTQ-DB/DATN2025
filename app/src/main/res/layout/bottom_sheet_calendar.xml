<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    app:behavior_hideable="true"
    app:expanded="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <FrameLayout
        android:id="@+id/fl_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_calendar">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16_dp"
            app:mcv_dateTextAppearance="@color/color_1B1B1Fs"
            app:mcv_firstDayOfWeek="monday"
            app:mcv_selectionColor="@color/color_0D0053DA"
            app:mcv_showOtherDates="all" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
